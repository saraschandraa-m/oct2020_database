<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/et_emp_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Employee ID"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_emp_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Employee Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_emp_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Employee Mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_emp_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Employee PhoneNumber"
        android:inputType="phone" />


    <EditText
        android:id="@+id/et_emp_desingation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Employee Designation"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spn_bloodgroup"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onEnterEmployeeClicked"
        android:text="Enter Employee" />

</LinearLayout>